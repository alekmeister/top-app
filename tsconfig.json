{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "app/*": [
        "src/app/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "widgets/*": [
        "src/widgets/*"
      ],
      "features/*": [
        "src/features/*"
      ],
      "entities/*": [
        "src/entities/*"
      ],
      "shared/*": [
        "src/shared/*"
      ]
    },
    "target": "ESNext"
  },
  "include": [
    "global-env.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
